# Copy to .env.local and update values
DATABASE_URL="postgresql://postgres:password@db:5432/taskwebsite?schema=public"
NEXTAUTH_SECRET="replace-this-with-a-random-string"
NEXTAUTH_URL="http://localhost:3000"
PORT=3000

# Email Configuration (SMTP)
# For Gmail: Use App Password (not regular password)
# Gmail SMTP: smtp.gmail.com, port 587
# Other providers: Mailgun, SendGrid, AWS SES, etc.
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM='"TaskWebsite" <noreply@taskwebsite.com>'
